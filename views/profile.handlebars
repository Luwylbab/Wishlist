<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a GiftPot:</h3>

<form class="form new-list-form">
  <div class="form-group">
    <label for="list-name">GiftPot Name:</label>
    <input class="form-input" type="text" id="list-name" name="list-name" />
    <label for="list-exp">GiftPot Exp. Date:</label>
    <input class="form-input" type="text" id="list-exp" name="list-exp" />
  </div>
  <div class="form-group">
    <div class="item-row">
      <label for="item-name">Item:</label>
      <input class="form-input" type="text" id="item-name" name="item-name" />
      <label for="item-price">Price:</label>
      <input class="form-input" type="text" id="item-price" name="item-price" />
      <label for="item-link">Link:</label>
      <input class="form-input" type="text" id="item-link" name="item-link" />
    </div>
    <div id="additional-items"></div>
      <button type="button" class="btn btn-primary" onclick="addItem()">Add Item</button>
      <button type="button" class="btn btn-primary" onclick="removeItem()">Remove Item</button>
    </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Create GiftPot</button>
  </div>
 </form>
</div>
  {{#if lists.length}}
  <div class="col-md-6 list-array">
    <h3>Your GiftPots:</h3>

    {{#each lists as |list|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{list.name}}</h4>
          <div class="item-row">
          <p>{{list.item}}</p>
          <p>{{list.price}}</p>
          <a href="{{list.link}}"><button>BUY</button></a>
          </div>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{list.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>

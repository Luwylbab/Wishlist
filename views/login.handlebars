<div class="row justify-space-between">
  <div class="col-md-5 custom-border custom-bg-green3" id="login-menu">
    <h2 class="var-text-light text-center">Login</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="email-login" class="var-text-light">Email</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login" class="var-text-light">Password</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-5 custom-border custom-bg-green3" id="signup-menu">
    <h2 class="var-text-light text-center">Sign Up</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup" class="var-text-light">Name</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup" class="var-text-light">Email</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup" class="var-text-light">Password</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn" type="submit">Sign Up</button>
      </div>
    </form>
  </div>
</div>
<script src="/js/login.js"></script>